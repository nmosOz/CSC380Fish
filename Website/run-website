from flask import Flask, render_template
import os
app = Flask(__name__)



#Homepage
@app.route("/")
def profile():
    return render_template("test.html")

#Display livestream
@app.route("/videoDisplay")
def videoDisplay():
    return render_template("videoDisplay.html")

def myFunc (e):
    return e[1]
#Display list of reports
@app.route("/reports")
def reports():
    lst = []
    for r, d, f in os.walk("C:/Users/natha/OneDrive/Desktop/CSC380/UI stuff"):
        for file in f:
            file, file_ex = os.path.splitext(file)
            lst.append([r, file])
            print(file)
    lst.sort(key=myFunc)
    return render_template("reports.html", lst=lst)   

if __name__=='__main__':
    app.run(debug=True)
